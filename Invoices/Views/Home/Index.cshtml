@using Invoices.BL.Interface;
@inject IInvoiceRep Invoice;

@{
    ViewData["Title"] = @SharedLocalizer["Main"];
}

@section css{

<!--  Owl-carousel css-->
<link href="~/assets/plugins/owl-carousel/owl.carousel.css" rel="stylesheet" />
<!-- Maps css -->
<link href="~/assets/plugins/jqvmap/jqvmap.min.css" rel="stylesheet">
}

@section PageHeader
{
<!-- breadcrumb -->
<div class="breadcrumb-header justify-content-between">
	<div class="left-content">
		<div>
			<h2 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">@SharedLocalizer["Hi welcome back"] : @User.Identity.Name</h2>
			<p class="mg-b-0"></p>
		</div>
	</div>
</div>
<!-- /breadcrumb -->
}

<!-- row -->
<div class="row row-sm">
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-primary-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white">@SharedLocalizer["ToltalInvoices"]</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">
                                @Invoice.Get().Sum(a=>a.AmountCollection).ToString("N0")
                            </h4>
                            <p class="mb-0 tx-12 text-white op-7">
                                @SharedLocalizer["NumOfInvoices"]
                                @Invoice.Get().Count()
                            </p>
                        </div>
                        <span class="float-right my-auto mr-auto">
                            <i class="fas fa-arrow-circle-up text-white"></i>
                            <span class="text-white op-7"> 100%</span>
                        </span>
                    </div>
                </div>
            </div>
            <span id="compositeline" class="pt-1">5,9,5,6,4,12,18,14,10,15,12,5,8,5,12,5,12,10,16,12</span>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-danger-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white" id="UnPaiedInvoicesLable">@SharedLocalizer["UnPaiedInvoices"]</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">
                                @Invoice.Get(a=>a.ValueStatus == 1).Sum(a=>a.AmountCollection).ToString("N0")
                            </h4>
                            <p class="mb-0 tx-12 text-white op-7">
                                @SharedLocalizer["NumOfInvoices"]
                                @Invoice.Get(a=>a.ValueStatus == 1).Count()
                            </p>
                            <input type="hidden" id="UnPaiedInvoicesCount" value="@Invoice.Get(a=>a.ValueStatus == 1).Count()" />

                        </div>
                        <span class="float-right my-auto mr-auto">
                            <i class="fas fa-arrow-circle-down text-white"></i>
                            <span class="text-white op-7">
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <span id="compositeline2" class="pt-1">3,2,4,6,12,14,8,7,14,16,12,7,8,4,3,2,2,5,6,7</span>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-success-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white" id="PaiedInvoicesLable">@SharedLocalizer["PaiedInvoices"]</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">
                                @Invoice.Get(a=>a.ValueStatus == 2).Sum(a=>a.AmountCollection).ToString("N0")
                            </h4>
                            <p class="mb-0 tx-12 text-white op-7">
                                @SharedLocalizer["NumOfInvoices"]
                                @Invoice.Get(a=>a.ValueStatus == 2).Count()
                            </p>
                            <input type="hidden" id="PaiedInvoicesCount" value="@Invoice.Get(a=>a.ValueStatus == 2).Count()" />

                        </div>
                        <span class="float-right my-auto mr-auto">
                            <i class="fas fa-arrow-circle-up text-white"></i>
                            <span class="text-white op-7">
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <span id="compositeline3" class="pt-1">5,10,5,20,22,12,15,18,20,15,8,12,22,5,10,12,22,15,16,10</span>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-xm-12">
        <div class="card overflow-hidden sales-card bg-warning-gradient">
            <div class="pl-3 pt-3 pr-3 pb-2 pt-0">
                <div class="">
                    <h6 class="mb-3 tx-12 text-white" id="PartialPaiedInvoicesLable">@SharedLocalizer["PartialPaiedInvoices"]</h6>
                </div>
                <div class="pb-0 mt-0">
                    <div class="d-flex">
                        <div class="">
                            <h4 class="tx-20 font-weight-bold mb-1 text-white">
                                @Invoice.Get(a=>a.ValueStatus == 3).Sum(a=>a.AmountCollection).ToString("N0")
                            </h4>
                            <p class="mb-0 tx-12 text-white op-7">
                                @SharedLocalizer["NumOfInvoices"]
                                @Invoice.Get(a=>a.ValueStatus == 3).Count()
                            </p>
                            <input type="hidden" id="PartialPaiedInvoicesCount" value="@Invoice.Get(a=>a.ValueStatus == 3).Count()" />

                        </div>
                        <span class="float-right my-auto mr-auto">
                            <i class="fas fa-arrow-circle-down text-white"></i>
                            <span class="text-white op-7">

                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <span id="compositeline4" class="pt-1">5,9,5,6,4,12,18,14,10,15,12,5,8,5,12,5,12,10,16,12</span>
        </div>
    </div>
</div>
<!-- row closed -->

<!-- row opened -->
<div class="row row-sm">
    <div class="col-md-12 col-lg-12 col-xl-7">
        <div class="card">
            <div class="card-header bg-transparent pd-b-0 pd-t-20 bd-b-0">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title mb-0" id="InvoicesStatus">@SharedLocalizer["InvoicesStatus"]</h4>
                    <i class="mdi mdi-dots-horizontal text-gray"></i>
                </div>
            </div>
            <div class="card-body" style="width:75%;">

                <div>
                    <canvas id="myChart"></canvas>
                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-12 col-xl-5">
        <div class="card card-dashboard-map-one">
            <label class="main-content-label">@SharedLocalizer["InvoicesStatus"]</label>
            <div style="width:75%;">
                <div>
                    <canvas id="myChart_polarArea"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- row closed -->


@section js
{

<!--Internal  Chart.bundle js -->
<script src="~/assets/plugins/chart.js/Chart.bundle.min.js"></script>
<!-- Moment js -->
<script src="~/assets/plugins/raphael/raphael.min.js"></script>
<!--Internal  Flot js-->
<script src="~/assets/plugins/jquery.flot/jquery.flot.js"></script>
<script src="~/assets/plugins/jquery.flot/jquery.flot.pie.js"></script>
<script src="~/assets/plugins/jquery.flot/jquery.flot.resize.js"></script>
<script src="~/assets/plugins/jquery.flot/jquery.flot.categories.js"></script>
<script src="~/assets/js/dashboard.sampledata.js"></script>
<script src="~/assets/js/chart.flot.sampledata.js"></script>
<!--Internal Apexchart js-->
<script src="~/assets/js/apexcharts.js"></script>
<!-- Internal Map -->
<script src="~/assets/plugins/jqvmap/jquery.vmap.min.js"></script>
<script src="~/assets/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
<script src="~/assets/js/modal-popup.js"></script>
<!--Internal  index js -->
<script src="~/assets/js/index.js"></script>
<script src="~/assets/js/jquery.vmap.sampledata.js"></script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

    var PartialPaiedInvoicesCount = document.getElementById("PartialPaiedInvoicesCount").value;
    var PaiedInvoicesCount = document.getElementById("PaiedInvoicesCount").value;
    var UnPaiedInvoicesCount = document.getElementById("UnPaiedInvoicesCount").value;

    var InvoicesStatus = document.getElementById("InvoicesStatus").textContent;
    var PartialPaiedInvoicesLable = document.getElementById("PartialPaiedInvoicesLable").textContent;
    var PaiedInvoicesLable = document.getElementById("PaiedInvoicesLable").textContent;
    var UnPaiedInvoicesLable = document.getElementById("UnPaiedInvoicesLable").textContent;

    const ctx = document.getElementById('myChart');
        const polarArea = document.getElementById('myChart_polarArea');
    const labels = [PaiedInvoicesLable, UnPaiedInvoicesLable, PartialPaiedInvoicesLable];

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: InvoicesStatus,
                data: [PaiedInvoicesCount, UnPaiedInvoicesCount, PartialPaiedInvoicesCount],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

        new Chart(polarArea, {
        type: 'polarArea',
        data: {
            labels: labels,
            datasets: [{
                label: InvoicesStatus,
                data: [PaiedInvoicesCount, UnPaiedInvoicesCount, PartialPaiedInvoicesCount],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                ],
                borderColor: [
                    'rgb(255, 99, 132)',
                    'rgb(255, 159, 64)',
                    'rgb(255, 205, 86)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
}