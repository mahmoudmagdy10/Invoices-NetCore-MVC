							<li><a class="slide-item" asp-controller="Invoice" asp-action="Index">@SharedLocalizer["InvoicesList"]</a></li>
							<li><a class="slide-item" asp-controller="Invoice" asp-action="PaiedInvoice">@SharedLocalizer["PaiedInvoices"]</a></li>
							<li><a class="slide-item" asp-controller="Invoice" asp-action="UnPaiedInvoice">@SharedLocalizer["UnPaiedInvoices"]</a></li>
							<li><a class="slide-item" asp-controller="Invoice" asp-action="PartialPaiedInvoice">@SharedLocalizer["PartialPaiedInvoices"]</a></li>
						</ul>
					</li>
				}
