							<li><a class="slide-item" asp-controller="Report" asp-action="UsersReports">@SharedLocalizer["UsersReports"]</a></li>
						</ul>
					</li>
					}
				@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
				{
					<li class="side-item side-item-category">@SharedLocalizer["Privileges"]</li>
					<li class="slide">
